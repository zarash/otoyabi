<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{class: "form-horizontal"},
   defaults: {
    input_html: { class: 'form-control' },
    wrapper_html: { class: ' col-sm-10' },
    label: false
  }
) do |f| %>
  <div class="form-group  col-sm-8"> 
    <%= f.label :email ,class: "col-sm-2 control-label"%>
    <%= f.input :email %>
  </div>

  <div class="form-group  col-sm-8"> 
    <%= f.label :password ,class: "col-sm-2 control-label"%>
    <%= f.input :password %>
  </div>

  <div class="form-group  col-sm-8">
    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, as: :boolean %>
    <% end -%>
  </div>

  <div class="form-group  col-sm-8">
    <div class=" col-sm-5 pull-left">      
      <%= f.button :submit,value=" Sign In", class: "btn btn-block btn-primary" %>
    </div>
    <div class= "col-sm-5 pull-left">      
     <%= link_to 'Sign Up', new_registration_path(resource_name), class: "btn btn-block btn-primary" %>
    </div>
  </div>

    <div class="form-group  col-sm-8">
      <div class= "col-sm-5">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
     </div> 
    </div>
<% end %>