<%= form_for(@galery, html: {class: "form-horizontal col-sm-6", :multipart => true } ) do |f| %>
  <% if @galery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@galery.errors.count, "error") %> prohibited this galery from being saved:</h2>

      <ul>
      <% @galery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :galery_name ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :galery_name ,class: "form-control"%>
    </div> 
  </div>     
  <div class="form-group">
    <%= f.label :address ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :address ,class: "form-control"%>
    </div> 
  </div>    
  <div class="form-group">
    <%= f.label :tel ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_field :tel ,class: "form-control"%>
    </div> 
  </div>     
  <div class="form-group">
    <%= f.label :details ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :details ,class: "form-control"%>
    </div> 
  </div>  
  <div class="form-group">
    <%= label_tag :temp, :state  ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= collection_select( :temp, :state_id, State.order(:name), :id, :name, include_blank: 'entekhab konid') %>
     </div> 
  </div>  
  <div class="form-group">
    <%= f.label :city ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.grouped_collection_select( :city_id , State.order ,:cities,:name ,:id, :name, include_blank: 'entekhab konid') %>
    </div>  
  </div> 
  <div>
    <%= f.file_field :photo %>
  </div>
  <% if can? :new, @galery %>    
  <button type="submit" class="btn btn-primary">Update</button>
  <% end %>

<% end %>
