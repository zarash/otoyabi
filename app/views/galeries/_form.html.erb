<%= simple_form_for(@galery, html: {class: "form-horizontal col-sm-6", :multipart => true } ,
   defaults: {
    input_html: { class: 'form-control' },
    wrapper_html: { class: ' col-sm-10' },
    label: false
  }
) do |f| %>
  <% if @galery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@galery.errors.count, "error") %> prohibited this galery from being saved:</h2>

      <ul>
      <% @galery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group  col-sm-10"> 
    <%= f.label :galery_name ,class: "col-sm-2 control-label"%>
    <%= f.input :galery_name %>
  </div> 

  <div class="form-group  col-sm-10"> 
    <%= f.label :address ,class: "col-sm-2 control-label"%>
    <%= f.input :address %>
  </div>

  <div class="form-group  col-sm-10"> 
    <%= f.label :tel ,class: "col-sm-2 control-label"%>
    <%= f.input :tel %>
  </div>   

  <div class="form-group col-sm-10">
    <%= f.label :detail ,class: "col-sm-2 control-label"%>
    <%= f.input :detail %>
  </div> 

  <div class="form-group col-sm-10">
    <%= label_tag :temp, :state  ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= collection_select( :temp, :state_id, State.order(:name), :id, :name, {include_blank: 'entekhab konid'},  {class: 'form-control'}) %>
     </div> 
  </div>

  <div class="form-group col-sm-10">
    <%= f.label :city ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.grouped_collection_select( :city_id , State.order,:cities,:name ,:id, :name, {include_blank: 'entekhab konid'},{class: 'form-control'}) %>
    </div>  
  </div>      
  <div class="form-group col-sm-10">
    <%= f.file_field :photo %>
  </div>

  <div class="form-group  col-sm-10">
    <div class=" col-sm-5 pull-left">
      <% if can? :new, @galery %>    
        <%= f.button :submit ,class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
    <div class= "col-sm-5 pull-left">      
      <%= link_to 'Back', galeries_path , class: "btn btn-block btn-primary" %>
    </div>
  </div>

<% end %>
