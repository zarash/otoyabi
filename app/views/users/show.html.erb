<div id:"user" class:"panel left">
  <h3><%= @user.first_name %> profile</h3>
<p>
  <b>first Name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>last Name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>email:</b>
  <%= @user.email %>
</p>

<p>
  <b>tel:</b>
  <%= @user.tel %>
</p>

<p>
  <b>mobile:</b>
  <%= @user.mobile %>
</p>

<p>
  <b>city:</b>
  <%= @user.try(:city).try(:name) %>
</p>

<p>
  <b>created_at:</b>
  <%= time_ago_in_words(@user.created_at) + " ago"  %>
</p>

<p>
  <b>updated_at:</b> 
  <%= time_ago_in_words(@user.updated_at) + " ago"  %>
</p>

