<div id="user_show">
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.first_name %> profile</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-xs-5 control-label">firstName</label>
              <div class="col-xs-7"> 
                <p class="form-control-static">
                  <%= @user.first_name %>
                </p>
            </div>
          </div>  
          <div class="form-group">
            <label class="col-xs-5 control-label">last Name</label>
              <div class="col-xs-7"> 
                <p class="form-control-static">
                  <%= @user.last_name %>
                </p>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Contact Details</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-xs-5 control-label">email</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= @user.email %>
                </p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-5 control-label">tel</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= @user.tel %>
                </p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-5 control-label">mobile</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= @user.mobile %>
                </p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-5 control-label">state</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= @user.city.try(:state).try(:name) %>
                </p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-5 control-label">city</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= @user.try(:city).try(:name) %>
                </p>
              </div>
          </div>
      </form>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Conect Details</h3>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-xs-5 control-label">created_at</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= time_ago_in_words(@user.created_at) + " ago"  %>
                </p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-xs-5 control-label">updated_at</label>
              <div class="col-xs-7">
                <p class="form-control-static">
                  <%= time_ago_in_words(@user.updated_at) + " ago"  %>
                </p>
            </div>
          </div>
        <%#= link_to 'add new ad', new_ad_path %>
        <%#= link_to 'Edit profile', edit_user_registration_path %>
        <%#= link_to 'Back', users_path %>
      </form>
      </div>
    </div>
  </div>
  <div id="leftContent" class="col-sm-8">
    <div id="cover">
      <div class="coverImage">
        <img class="img-responsive" src="http://s3-eu-west-1.amazonaws.com/hamsafaryab.production/static_files/images/default_cover.jpg" >
      </div>  
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">all <%= @user.first_name %> ads</h3>
      </div>
      <div class="panel-body">
        <div class="panel panel-default ads">
          <div class="panel-body">
            <div id="" class="user-ads">
            <% if @user.ads.any? %>
              <% @user.ads.each do |ad| %>
                <a href="<%= ad_path(ad.id) %>">
                  <div class="row search_ads_raw"> 
                    <%#= link_to( ad.car_model.brand.name, ad) %>
                    <%= ad.car_model.name %><br>
                    <%= ad.year%><br>
                    <%= ad.detail%><br>
                    <%= time_ago_in_words(ad.updated_at) + " ago" %><br>
                    <%= ad.price %> 
                  </div>
                </a>
              <% end %>
            <% else %>  
              <p>There is no record with this conditions.</p>
            <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>    
</div>