<h1>Listing ads</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Car model</th>
    <th>User</th>
    <th>Girbox</th>
    <th>Internal color</th>
    <th>Cover color</th>
    <th>Price</th>
    <th>Fuel type</th>
    <th>Mileage</th>
    <th>Year</th>
    <th>Detail</th>
    <th>View count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.brand %></td>
    <td><%= ad.car_model %></td>
    <td><%= ad.user %></td>
    <td><%= ad.girbox %></td>
    <td><%= ad.internal_color %></td>
    <td><%= ad.cover_color %></td>
    <td><%= ad.price %></td>
    <td><%= ad.fuel_type %></td>
    <td><%= ad.mileage %></td>
    <td><%= ad.year %></td>
    <td><%= ad.detail %></td>
    <td><%= ad.view_count %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

