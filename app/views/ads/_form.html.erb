<%= form_for(@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= label_tag :temp, :brand %><br />
    <%= collection_select( :temp, :brand_id, Brand.order(:name), :id, :name, include_blank: 'entekhab konid') %>
  </div>
  <div class="field">
    <%= f.label :car_model %><br />
    <%= f.grouped_collection_select( :car_model_id, Brand.order,:car_models,:name ,:id, :name, include_blank: 'entekhab konid') %>
  </div>
  <div class="field">
    <%= f.label :girbox %><br />
    <%= f.select :girbox, [['dandei','d'], ['automatic','a']] %>
  </div>
  <div class="field">
    <%= f.label :internal_color %><br />
    <%= f.collection_select(:internal_color_id, Color.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :cover_color %><br />
    <%= f.collection_select(:cover_color_id, Color.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :fuel_type %><br />
    <%= f.select :fuel_type, [['benzin','bz'], ['gaz','ga'], ['hayberid', 'h'], ['gazol', 'gl']] %>
  </div>
  <div class="field">
    <%= f.radio_button :car_status ,'karkarde', checked: true, class: "mile"  %>karkarde
    <%= f.radio_button :car_status ,'sefr', class: "mile" %>sefr
    <%= f.radio_button :car_status ,'havale', class: "mile" %>havale
  </div>
  <div class="field">
    <%= f.label :mileage %><br />
    <%= f.number_field :mileage %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :exchange %><br />
    <%= f.check_box :exchange %>
  </div>
  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_area :detail %>
  </div>
  <div class="field">
    <%= f.label :view_count %><br />
    <%= f.number_field :view_count %>
  </div>
    <div class="field">
    <%= f.number_field :view_count %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
