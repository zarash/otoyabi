<div class="new-ads">
<%= form_for(@ad, html: {class: "form-horizontal col-sm-3"}) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag :temp, :brand  ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= collection_select( :temp, :brand_id, Brand.order(:name), :id, :name, include_blank: 'entekhab konid') %>
     </div> 
  </div>
  <div class="form-group">
    <%= f.label :car_model ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.grouped_collection_select( :car_model_id , Brand.order,:car_models,:name ,:id, :name, include_blank: 'entekhab konid') %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :girbox ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.select :girbox, [['dandei','d'], ['automatic','a']] %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :internal_color ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
     <%= f.collection_select(:internal_color_id, Color.all, :id, :name) %>
    </div> 
  </div>
  <div class="form-group">
    <%= f.label :cover_color,class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:cover_color_id, Color.all, :id, :name) %>
    </div>  
  </div>
  <div class="form-group">
    <%= f.label :fuel_type  ,class: "col-sm-2 control-label"%>
    <%= f.select :fuel_type, [['benzin','bz'], ['gaz','ga'], ['hayberid', 'h'], ['gazol', 'gl']] %>
  </div>
  <div class="form-group">
    <%= f.label :price ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.number_field :price ,class: "form-control"%>
    </div> 
  </div>
  <div class="form-group">
    <%= f.label :mileage ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.number_field :mileage ,class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year,class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :year,class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :detail,class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :detail,class: " form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.radio_button :car_status ,'karkarde', checked: true, class: "mile"  %>karkarde
    <%= f.radio_button :car_status ,'sefr', class: "mile" %>sefr
    <%= f.radio_button :car_status ,'havale', class: "mile" %>havale
  </div>  
  <div class="checkbox col-sm-offset-2 col-sm-10">
    <%= f.label :exchange %>
    <%= f.check_box :exchange %>
  </div>
 
    <% if can? :new, @ad %>
      <button type="submit" class="btn btn-primary">update</button>      
    <% end %>
    <%#= link_to 'Back', ads_path, class: "btn btn-primary" %>
  
<% end %>
</div>