<%= simple_form_for(@car_model , html: {class: "form-horizontal"},
defaults: {
    input_html: { class: 'form-control' },
    wrapper_html: { class: ' col-sm-10' },
    label: false
  }
) do |f| %>
  <% if @car_model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car_model.errors.count, "error") %> prohibited this car_model from being saved:</h2>

      <ul>
      <% @car_model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group  col-sm-10">
    <%= f.label :brand, "Brand", class: "col-sm-2 control-label" %>
    <%= f.association :brand  %>   
  </div>

  <div class="form-group  col-sm-10"> 
    <%= f.label :name ,class: "col-sm-2 control-label"%>
    <%= f.input :name %>
  </div>

  <div class="form-group  col-sm-10">
    <div class= "col-sm-5 pull-left">      
      <%= link_to 'Back', car_models_path, class: "btn btn-block btn-primary" %>
    </div>
    <div class=" col-sm-5 pull-left">      
      <%= f.button :submit, class: "btn btn-block btn-primary" %>
    </div>
    
  </div>
<% end %>
